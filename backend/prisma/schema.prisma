generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  LISTENER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String?
  role      Role     @default(LISTENER)
  provider  String   @default("LOCAL")
  googleId  String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  likes         Like[]
  playlists     Playlist[]
  stats         UserTrackStat[]
  history       History[]
  ratings       Rating[]
  refreshTokens RefreshToken[]
}

model Artist {
  id        String   @id @default(uuid())
  name      String   @unique
  bio       String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tracks Track[]
  albums Album[]

  @@index([name])
}

model Album {
  id          String    @id @default(uuid())
  title       String
  coverUrl    String?
  artistId    String
  releaseDate DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  artist Artist  @relation(fields: [artistId], references: [id])
  tracks Track[]

  @@index([title])
}

model Track {
  id         String    @id @default(uuid())
  title      String
  artistId   String
  albumId    String?
  coverUrl   String?
  audioUrl   String
  duration   Int
  genre      String?
  lyrics     String?
  description String?
  tags       String[]
  plays      Int       @default(0)
  isFeatured Boolean   @default(false)
  isTrending Boolean   @default(false)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?

  artist         Artist          @relation(fields: [artistId], references: [id])
  album          Album?          @relation(fields: [albumId], references: [id])
  likes          Like[]
  playlistTracks PlaylistTrack[]
  userStats      UserTrackStat[]
  history        History[]
  ratings        Rating[]

  @@index([title])
  @@index([artistId])
  @@index([albumId])
  @@index([deletedAt])
}

model Playlist {
  id          String   @id @default(uuid())
  name        String
  description String?
  coverUrl    String?
  userId      String
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user   User            @relation(fields: [userId], references: [id])
  tracks PlaylistTrack[]

  @@index([name])
  @@index([userId])
}

model PlaylistTrack {
  id         String   @id @default(uuid())
  playlistId String
  trackId    String
  addedAt    DateTime @default(now())

  playlist Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  track    Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@unique([playlistId, trackId])
}

model Like {
  id        String   @id @default(uuid())
  userId    String
  trackId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  track Track @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@unique([userId, trackId])
}

model Rating {
  id        String   @id @default(uuid())
  userId    String
  trackId   String
  value     Int // 1-5
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  track Track @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@unique([userId, trackId])
}

model UserTrackStat {
  id           String   @id @default(uuid())
  userId       String
  trackId      String
  playCount    Int      @default(0)
  lastPlayedAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  track Track @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@unique([userId, trackId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  tokenHash String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  revoked   Boolean  @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model History {
  id        String   @id @default(uuid())
  userId    String
  trackId   String
  playedAt  DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  track Track @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([trackId])
}
